
<h3>Criar novo Referencial<h3>
<h4><%= @referencialPai.titulo %></h4>

<%= form_for @referencial, url: novo_filho_create_path do |f| %>
    <%= f.hidden_field :id_pai, :value => @referencialPai.id %>
    <div class="form-group">
        <%= f.label :identificador %>
        <%= f.text_field :identificador, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :tipo %>
        <%= f.text_field :tipo, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :titulo %>
        <%= f.text_field :titulo, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= f.label :descricao %>
        <%= f.text_area :descricao, rows: 4, class: "form-control" %>
    </div>

    <div class="form-inline">
        <%= f.submit "Criar Referencial Estrategico", class: "btn btn-primary" %>
    </div>
<% end %>


<% content_for :header_tags do %>
    <%= stylesheet_link_tag 'pdtic', :plugin => 'plugin_alinha_pdtic' %>
<% end %>
