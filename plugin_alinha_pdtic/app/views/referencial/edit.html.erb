# encoding: UTF-8

<h3>Editar Referencial selecionado<h3>


<%= form_for @referencial, url: referencial_path do |f| %>

    <div class="form-group">
        <%= label :id_pai, 'Referencial Pai' %>
        <%= collection_select(:page, :id_pai, Referencial.all, :id, :titulo, @referencial.principal ? {:selected => @referencial.principal.id} : {}) %>
    </div>

    <div class="form-group">
        <%= f.label :identificador %>
        <%= f.text_field :identificador, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :tipo %>
        <%= f.text_field :tipo, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :titulo, 'Título' %>
        <%= f.text_field :titulo, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= f.label :descricao, 'Descrição' %>
        <%= f.text_area :descricao, rows: 4, class: "form-control" %>
    </div>

    <div class="form-inline">
        <%= link_to "Cancelar", referenciais_path, class: "icon icon-cancel float-left small-text" %>
        <%= f.submit "Editar Referencial Tático", class "icon icon-edit float-right" %>
    </div>
<% end %>

<%= render "peReferencial" %>
